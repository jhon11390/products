<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-4">
      <h1><%= form_title %></h1>
      <%= form_for @product do |f| %>
        <div class="form-group">
          <%= f.label :Nombre_Producto%>
          <%= f.text_field :name, class: "form-control"%>
        </div>
        <div class="form-group">
          <%= f.label :Precio %>
          <%= f.number_field :price, class: "form-control"%>
        </div>
        <div class="form-group">
          <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |form| %>
            <%= form.label(class:"container") do %>
              <%= form.check_box %>
              <%= form.object.name %>
               <span class="chekmark"></span>
            <% end %>
          <% end %>
        </div>
        <%= f.submit form_title, class: "btn btn-primary btn-block btn-lg"%>
      <% end %>
    </div>
  </div>
</div>