<div class="container mt-4">
  <div class="row">
    <div class="col">
      <h1>Products</h1>
    </div>
  </div>
  <div class="row justify-content-end mb-4">
    <div class="col-2">
      <%= link_to 'Nuevo Producto', products_new_path, class: "btn btn-primary" %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Categoria</th>
            <th>opciones</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product|%>
            <tr>
              <td><%= product.name %></td>
              <td><%= product.price %></td>
              <td>
                <% product.categories.each do |category| %>
                  <span><%= category.name %>, </span>
                <% end %>
              </td>
              <td>
                <%= link_to 'eliminar', product, method: :delete %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>